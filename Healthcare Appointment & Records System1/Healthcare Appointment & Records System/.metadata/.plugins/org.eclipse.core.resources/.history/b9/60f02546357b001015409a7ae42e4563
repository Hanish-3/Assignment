    package com.example.billing_service.repository;

    import com.example.billing_service.model.Invoice;
    import org.springframework.data.jpa.repository.MangoRepository;
    import org.springframework.stereotype.Repository;

    import java.util.List;

    @Repository
    public interface InvoiceRepository extends MangoRepository<Invoice, Long> {
        List<Invoice> findByPatientId(Long patientId);
        List<Invoice> findByAppointmentId(Long appointmentId);
    }
    